<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% @user.patients.each do |patient| %>
	<%= link_to patient.name, [@user, patient] %>
	<%= patient.phone  %>
<% end %>

<h1>Create an Update</h1>
	<%= form_for [@user, @update] do |f|  %>

		<%= f.label :body  %>
		<%= f.text_field :body %>
		 <%= collection_select(:update, :patient_id, @user.patients, :id, :name) %>
		<%= f.submit   %>
	<% end %>

<h1>Create a new patient</h1>
<%= form_for [@user, @patient] do |f|  %>
	<%= f.label :name  %>
	<%= f.text_field :name %>

	<%= f.label :phone %>
	<%= f.text_field :phone %>

	<%= f.submit  %>
<% end %>



<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
